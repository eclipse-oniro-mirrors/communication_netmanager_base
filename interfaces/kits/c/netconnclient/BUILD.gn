import("//build/ohos.gni")
import("//foundation/communication/netmanager_base/netmanager_base_config.gni")

config("net_connection_config"){
   include_dirs = [ "//foundation/communication/netmanager_base/interfaces/kits/c/netconnclient/include" ]
}

ohos_shared_library("net_connection") {
  sanitize = {
    cfi = true
    cfi_cross_dso = true
    debug = false
  }

  branch_protector_ret = "pac_ret"

  output_extension = "so"
  include_dirs =
      [ "$NETMANAGER_BASE_ROOT/interfaces/kits/c/netconnclient/include" ]

  public_configs = [ ":net_connection_config" ]

  sources = [
    "$NETMANAGER_BASE_ROOT/interfaces/kits/c/netconnclient/src/net_probe.cpp",
    "$NETMANAGER_BASE_ROOT/interfaces/kits/c/netconnclient/src/net_connection.cpp",
    "$NETMANAGER_BASE_ROOT/interfaces/kits/c/netconnclient/src/net_connection_adapter.cpp",
  ]

  cflags = [
    "-D_FORTIFY_SOURCE=2",
    "-O2",
  ]

  cflags_cc = [
    "-D_FORTIFY_SOURCE=2",
    "-O2",
  ]

  deps = [
    "$INNERKITS_ROOT/netconnclient:net_conn_manager_if",
    "$NETMANAGER_BASE_ROOT/utils:net_manager_common",
  ]

  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
    "ipc:ipc_core",
    "samgr:samgr_proxy",
  ]

  part_name = "netmanager_base"
  subsystem_name = "communication"
  relative_install_dir = "ndk"
}
