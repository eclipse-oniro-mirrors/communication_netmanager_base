import("//build/ohos.gni")
import("//foundation/communication/netmanager_base/netmanager_base_config.gni")

ohos_ndk_library("libnetconn_ndk") {
  output_name = "netconn"
  output_extension = "z.so"
  ndk_description_file = "./libnetconn.ndk.json"
  min_compact_version = "1"
}

ohos_ndk_headers("netconn_header") {
  dest_dir = "$ndk_headers_out_dir/netconn"
  sources = [
    "./include/native_net_conn_api.h",
    "./include/native_net_conn_type.h",
  ]
}

ohos_shared_library("netconn_ndk") {
  include_dirs =
      [ "$NETMANAGER_BASE_ROOT/interfaces/kits/c/netconnclient/include" ]

  sources = [
    "$NETMANAGER_BASE_ROOT/interfaces/kits/c/netconnclient/src/native_net_conn_adapter.cpp",
    "$NETMANAGER_BASE_ROOT/interfaces/kits/c/netconnclient/src/native_net_conn_api.cpp",
  ]

  deps = [
    ":libnetconn_ndk",
    ":netconn_header",
    "$INNERKITS_ROOT/netconnclient:net_conn_manager_if",
    "$NETMANAGER_BASE_ROOT/utils:net_manager_common",
  ]

  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
  ]

  part_name = "netmanager_base"
  subsystem_name = "communication"
}
