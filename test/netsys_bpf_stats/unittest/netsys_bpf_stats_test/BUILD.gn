import("//build/test.gni")
import("//foundation/communication/netmanager_base/netmanager_base_config.gni")

ohos_unittest("netsys_bpf_stats_test") {
  module_out_path = "netsys_bpf_stats/netsys_bpf_stats_test"

  sources = [ "netsys_bpf_stats_test.cpp" ]

  include_dirs = [
    "$NETCONNMANAGER_COMMON_DIR/include",
    "$NETSTATSMANAGER_BPFLIB_DIR/include/",
    "$NETSTATSMANAGER_SOURCE_DIR/include",
    "$NETSYSBPFMAP_SOURCE_DIR/include",
    "$NETSYSBPFMAP_SOURCE_DIR/include",
    "$INNERKITS_ROOT/netmanagernative/include/",
  ]

  deps = [
    "$HILOG_ROOT/interfaces/native/innerkits:libhilog",
    "$NETMANAGER_BASE_ROOT/services/netsys_bpf_stats:netsys_bpf_stats",
    "$NETSTATSMANAGER_BPFLIB_DIR:netsys_bpf_stats",
  ]

  external_deps = [
    "c_utils:utils",
    "ipc:ipc_core",
    "safwk:system_ability_fwk",
  ]

  defines = [
    "NETMGR_LOG_TAG = \"NetStatsClient\"",
    "LOG_DOMAIN = 0xD0015B0",
  ]

  if (enable_netmgr_debug) {
    defines += [ "NETMGR_DEBUG" ]
  }

  if (is_standard_system) {
    external_deps += [ "hiviewdfx_hilog_native:libhilog" ]
  } else {
    external_deps += [ "hilog:libhilog" ]
  }

  part_name = "netmanager_base"
  subsystem_name = "communication"
}

group("unittest") {
  testonly = true
  deps = [ ":netsys_bpf_stats_test" ]
}
